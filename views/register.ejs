<%- include("./partials/header.ejs") %>
<div class="container w-full h-[80%] flex items-center justify-center">
    <div class="loginpanel">
        <h3 class="text-2xl font-semibold mb-4">Create Account</h3>
        <form action="/register" method="post" class="flex flex-col gap-2 items-start">
            <input class="px-3 py-2 border-[1.5px] border-zinc-300 rounded-md outline-none" type="text" placeholder="Name" name="name">
            <input class="px-3 py-2 border-[1.5px] border-zinc-300 rounded-md outline-none" type="email" placeholder="Email" name="email">
            <input class="px-3 py-2 border-[1.5px] border-zinc-300 rounded-md outline-none" type="text" placeholder="Username" name="username">
            <input class="px-3 py-2 border-[1.5px] border-zinc-300 rounded-md outline-none" type="password" placeholder="Password" name="password">
            <input class="px-3 py-2 bg-blue-500 text-white rounded-md" type="submit" value="Create">
        </form>
        <a class="text-blue-500 inline-block mt-5" href="/">Have an account, please login</a>
    </div>
</div>
<%- include("./partials/footer.ejs") %>