<%- include('./partials/header.ejs') %>
    <div class="container mx-auto p-6">
        <div class="max-w-lg mx-auto bg-white p-6 border border-gray-300 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold mb-4">Edit Your Hisaab</h2>
            <form action="/hisaab/edit/<%= hisaab._id %>" method="post">
                <div class="mb-4">
                    <input name="title" value="<%= hisaab.title %>" type="text" placeholder="Shopping Hisaab, Ghar ka Kharch..."
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="mb-4">
                    <textarea name="description" placeholder="Daal, Aata, Cheeni"
                        class="resize-none w-full p-2 border border-gray-300 rounded h-32"><%= hisaab.description %></textarea>
                </div>
                <div class="mb-4">
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="encrypted" class="form-checkbox" <% if (hisaab.encrypted) { %> checked <% } %> >
                        <span class="ml-2">Encrypt this file</span>
                    </label>
                    <input <%= hisaab.passcode %> name="passcode" type="password" placeholder="Passcode"
                        class="w-full mt-2 p-2 border border-gray-300 rounded">
                </div>
                <div class="mb-4">
                    <label class="inline-flex items-center">
                        <input name="shareable" type="checkbox" class="form-checkbox" <% if (hisaab.shareable) { %> checked <% } %>>
                        <span class="ml-2">Shareable file?</span>
                    </label>
                </div>
                <div class="mb-4">
                    <label class="inline-flex items-center">
                        <input name="editpermissions" type="checkbox" class="form-checkbox" <% if (hisaab.editpermissions) { %> checked <% } %>>
                        <span class="ml-2">Edit permissions.</span>
                    </label>
                </div>
                <div>
                    <button type="submit" class="w-full bg-yellow-500 text-zinc-900 font-semibold text-white p-2 rounded">Edit Hisaab</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>